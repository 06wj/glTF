{
    "$schema" : "http://json-schema.org/draft-03/schema",
    "title" : "buffer",
    "type" : "object",
    "description" : "Buffers contain geometry, animation, or skin data.",
    "properties" : {
        "path" : {
            "type" : "string",
            "description" : "The uri of the buffer.  Relative paths are relative to the .json file.  Instead of referencing an external file, the uri can also be a data-uri.",
            "format" : "uri",
            "required" : true
        },
        "byteLength" : {
            "type" : "integer",
            "description" : "The length of the buffer in bytes.",
            "minimum" : 0,
            "required" : true
        },
        "type" : {
            "type" : "string",
            "description" : "XMLHttpRequest responseType.",
            "enum" : ["arraybuffer", "text"],
            "default" : "arraybuffer"
        },
        "extensions" : {
            "properties" : {
            },
            "additionalProperties" : {
                "$ref" : "extension.schema.json"
            }        
        },
        "extras" : {
            "type" : "any",
            "description" : "Optional application-specific data."
        }
    },
    "additionalProperties" : false
}
