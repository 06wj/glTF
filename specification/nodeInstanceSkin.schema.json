            "required" : true
        },
        "sources" : {
            "type" : "array",
            "description" : "The ids (JSON property names) of source meshes.",
            "items" : {
                "type" : "string",
                "minLength" : 1
            },
            "uniqueItems" : true,
            "required" : true
        },
        "extensions" : {
            "properties" : {
            },
            "additionalProperties" : {
                "$ref" : "extension.schema.json"
            }
        },
        "extras" : {
            "$ref" : "extras.schema.json"
        }
    },
