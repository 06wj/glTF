{
    "$schema" : "http://json-schema.org/draft-03/schema",
    "title" : "animation channel",
    "type" : "object",
    "description" : "Targets a sampler at a glTF property.",
    "properties" : {
        "sampler" : {
            "type" : "string",
            "description" : "Reference to animation sampler to use as the value, e.g., translation, rotation, or scale, for the target.",
            "required" : true
        },
        "target" : {
            "$ref" : "animationChannelTarget.schema.json"
        },
        "extras" : {
            "type" : "any",
            "description" : "Optional application-specific data."
        }
    },
    "additionalProperties" : false
}
