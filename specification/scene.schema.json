{
    "$schema" : "http://json-schema.org/draft-03/schema",
    "title" : "scene",
    "type" : "object",
    "description" : "The root nodes of the scene.",
    "properties" : {
        "name" : {
            "type" : "string",
            "description" : "The user-defined name of this scene.  This is not necessarily unique among scenes."
        },
        "nodes" : {
            "type" : "array",
            "description" : "The ids (JSON property names) for each root node.",
            "items" : {
                "type" : "string"
            },
            "uniqueItems" : true
        },
        "extensions" : {
            "properties" : {
            },
            "additionalProperties" : {
                "$ref" : "extension.schema.json"
            }
        },
        "extras" : {
            "type" : "any",
            "description" : "Optional application-specific data."
        }
    },
    "additionalProperties" : false
}
