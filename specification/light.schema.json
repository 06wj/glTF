{
    "$schema" : "http://json-schema.org/draft-03/schema",
    "title" : "light",
    "type" : "object",
    "description" : "An ambient, directional, point, or spot light.",
    "properties" : {
        "ambient" : {
            "$ref" : "lightAmbient.schema.json"
        },
        "directional" : {
            "$ref" : "lightDirectional.schema.json"
        },
        "name" : {
            "type" : "string",
            "description" : "The user-defined name of this light.  This is not necessarily unique among lights."
        },
        "point" : {
            "$ref" : "lightPoint.schema.json"
        },
        "spot" : {
            "$ref" : "lightSpot.schema.json"
        },
        "type" : {
            "type" : "string",
            "description" : "Specifies the light type.",
            "enum" : ["ambient", "directional", "point", "spot"],
            "required" : true
        },
        "extensions" : {
            "properties" : {
            },
            "additionalProperties" : {
                "$ref" : "extension.schema.json"
            }
        },
        "extras" : {
            "$ref" : "extra.schema.json"
        }
    },
    "additionalProperties" : false
}
