        "passes" : {
            "properties" : {
            },
            "additionalProperties" : {
                "$ref" : "techniquePass.schema.json"
            }
        },
        "extensions" : {
            "properties" : {
            },
            "additionalProperties" : {
                "$ref" : "extension.schema.json"
            }        
        },
        "extras" : {
