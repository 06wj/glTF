{
    "$schema" : "http://json-schema.org/draft-03/schema",
    "title" : "image",
    "type" : "object",
    "description" : "An image.",
    "properties" : {
        "path" : {
            "type" : "string",
            "description" : "The uri of the image.  Relative paths are relative to the .json file.  Instead of referencing an external file, the uri can also be a data-uri.  WebGL 1.0.2 Profile: allows only .png and .jpg.",
            "format" : "uri",
            "required" : true
        },
        "extensions" : {
            "properties" : {
            },
            "additionalProperties" : {
                "$ref" : "extension.schema.json"
            }        
        },
        "extras" : {
            "type" : "any",
            "description" : "Optional application-specific data."
        }
    },
    "additionalProperties" : false
}
