{
    "$schema" : "http://json-schema.org/draft-03/schema",
    "title" : "camera",
    "type" : "object",
    "description" : "A view into the scene.  The camera describes the projection, but not the camera's position and direction.",
    "properties" : {
        "orthographic" : {
            "$ref" : "cameraOrthographic.schema.json"
        },
        "perspective" : {
            "$ref" : "cameraPerspective.schema.json"
        },
        "name" : {
            "type" : "string",
            "description" : "The user-defined name of this camera.  This is not necessarily unique among cameras."
        },
        "type" : {
            "type" : "string",
            "description" : "Perspective or orthographic camera",
            "enum" : ["perspective", "orthographic"],
            "required" : true
        },
        "extensions" : {
            "properties" : {
            },
            "additionalProperties" : {
                "$ref" : "extension.schema.json"
            }
        },
        "extras" : {
            "$ref" : "extra.schema.json"
        }
    },
    "additionalProperties" : false
}
