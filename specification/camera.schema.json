{
    "$schema" : "http://json-schema.org/draft-03/schema",
    "title" : "camera",
    "type" : "object",
    "description" : "A view into the scene.  The camera describes the projection, but not the camera's position and direction.",
    "properties" : {
        "orthographic" : {
            "$ref" : "cameraOrthographic.schema.json"
        },
        "perspective" : {
            "$ref" : "cameraPerspective.schema.json"
        },
        "type" : {
            "type" : "string",
            "description" : "Perspective or orthographic camera",
            "enum" : ["perspective", "orthographic"],
            "required" : true
        },
        "extra" : {
            "type" : "any",
            "description" : "Optional application-specific data."
        }
    },
    "additionalProperties" : false
}
